<section class="register">
  <div class="min-h-screen flex items-center justify-center bg-[#fff7f1] px-4">
    <div class="bg-white p-8 mb-10 w-full max-w-md border shadow-lg ">
      
    
      <div class="flex flex-col items-center mb-6">
        <img src="/img/pizzalogo.png" class="w-16 h-16 mb-2 shadow-md" alt="Pizza Logo" />
        <h2 class="text-2xl font-bold text-orange-600">Create Your Pizza Account</h2>
      </div>

 
      <% if (messages.success) { %>
        <div class="bg-green-100 text-green-800 text-sm px-4 py-2 mb-4 border border-green-300  shadow-sm">
          <%= messages.success %>
        </div>
      <% } %>

      <% if (messages.error) { %>
        <div class="bg-red-100 text-red-700 text-sm px-4 py-2 mb-4 border border-red-300  shadow-sm">
          <%= messages.error %>
        </div>
      <% } %>

      
      <form action="/register" method="POST" class="space-y-4">
        <div>
          <label class="block text-gray-700 font-semibold mb-1">Name</label>
          <input
            type="text"
            name="name"
            placeholder="Enter Your Name"
            value="<%= messages.name ? messages.name[0] : '' %>"
            required
            class="w-full px-4 py-2 border border-gray-300 focus:outline-none focus:ring-2 focus:ring-orange-400 rounded"
          />
        </div>

        <div>
          <label class="block text-gray-700 font-semibold mb-1">Email</label>
          <input
            type="email"
            name="email"
            placeholder="Enter your email"
            value="<%= messages.email ? messages.email[0] : '' %>"
            required
            class="w-full px-4 py-2 border border-gray-300 focus:outline-none focus:ring-2 focus:ring-orange-400 rounded"
          />
        </div>

        <div>
          <label class="block text-gray-700 font-semibold mb-1">Password</label>
          <input
            type="password"
            name="password"
            placeholder="Enter your password"
            required
            class="w-full px-4 py-2 border border-gray-300 focus:outline-none focus:ring-2 focus:ring-orange-400 rounded"
          />
        </div>

        <div class="flex justify-between items-center">
          <button
            type="button"
            onclick="window.history.back();"
            class="text-sm text-gray-500 hover:underline"
          >
            Cancel
          </button>

          <button
            type="submit"
            class="btn-primary text-white font-semibold py-2 px-5 rounded-full shadow transition duration-300">
            Register
          </button>
        </div>
      </form>

      
      <p class="text-center text-sm text-gray-600 mt-6">
        Already have an account?
        <a href="/login" class="text-red-600 font-medium hover:underline">Login</a>
      </p>
    </div>
  </div>
</section>
